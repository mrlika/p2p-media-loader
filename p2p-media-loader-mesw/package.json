{
  "name": "p2p-media-loader-mesw",
  "description": "P2P Media Loader integration on top of HTMLMediaElement using Service Workers",
  "version": "0.3.0",
  "license": "Apache-2.0",
  "author": "Novage",
  "homepage": "https://github.com/Novage/p2p-media-loader",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "p2p",
    "peer-to-peer",
    "hls",
    "webrtc",
    "video",
    "player",
    "torrent",
    "bittorrent",
    "webtorrent",
    "htmlmediaelement",
    "service-worker"
  ],
  "scripts": {
    "compile": "tsc && copyfiles -f ./lib/*.js ./dist",
    "browserify": "mkdirp ./build && browserify -r ./dist/index.js:p2p-media-loader-mesw ./dist/browser-init.js -x p2p-media-loader-core -x debug -x events > ./build/p2p-media-loader-mesw.js",
    "minify": "terser ./build/p2p-media-loader-mesw.js -m -c > ./build/p2p-media-loader-mesw.min.js",
    "webpack:build": "webpack --progress",
    "webpack:watch": "webpack --watch --progress",
    "build": "npm run compile && npm run browserify && npm run minify",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.tslint.json",
    "test": "TS_NODE_PROJECT=tsconfig.test.json TS_NODE_CACHE=false mocha -r ts-node/register test/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Novage/p2p-media-loader.git"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "events": "^3.0.0",
    "m3u8-parser": "^4.3.0",
    "p2p-media-loader-core": "^0.3.0"
  },
  "devDependencies": {
    "@types/debug": "^0.0.31",
    "@types/events": "^1.2.0",
    "browserify": "^16.2.3",
    "browserify-versionify": "^1.0.6",
    "copyfiles": "^2.1.0",
    "mkdirp": "^0.5.1",
    "terser": "^3.14.1",
    "ts-loader": "^5.3.3",
    "ts-mockito": "^2.3.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  },
  "browserify": {
    "transform": [
      "browserify-versionify"
    ]
  }
}
